@model ChatScreenViewModel
@{
    ViewData["Title"] = "Screen";
}
<div class="container my-3">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card chat-app">
                <ul id="list">
                </ul>
                <div class="chat">
                    <div class="chat-header clearfix">
                        <div class="row">
                            <div class="col-lg-6">
                                <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                                </a>
                                <div class="chat-about">
                                    <h6 class="m-b-0">@Model.ReceiverName</h6>
                                    <small>Last seen: 2 hours ago</small>
                                </div>
                                <input type="hidden" id="senderName" value="@Model.SenderName" />
                                <input type="hidden" id="senderId" value="@Model.SenderId" />
                                <input type="hidden" id="receiverName" value="@Model.ReceiverName" />
                                <input type="hidden" id="receiverId" value="@Model.ReceiverId" />
                                <input type="hidden" id="groupId" value="@Model.GroupId"/>
                                <input type="hidden" id="groupName" value="@Model.GroupName" />
                            </div>
                        </div>
                    </div>
                    <div class="chat-history ScrollStyle" id="chat-history">
                        <ul class="m-b-0" id="messageList">
                            @foreach (var chat in Model.UserMessages)
                            {
                                if (chat.IsSender)
                                {
                                    <li class="clearfix">
                                        <div class="align-right">
                                            <div class="message other-message">
                                                @chat.Message
                                            </div><br>
                                            <div class="message-data text-right">
                                                <span class="message-data-time">@chat.CreatedDate.ToString("dddd h:mm tt")</span>
                                            </div>
                                        </div>                                        
                                    </li>
                                }
                                else
                                {
                                    <li class="clearfix">
                                        <div class="message my-message">@chat.Message</div>
                                        <div class="message-data">
                                            <span class="message-data-time">@chat.CreatedDate.ToString("dddd h:mm tt")</span>
                                        </div>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="chat-message clearfix">
                        <div class="input-group mb-0">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-send"></i></span>
                            </div>
                            <input type="text" id="txtMessage" class="form-control" placeholder="Enter text here...">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


